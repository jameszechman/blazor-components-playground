@inject IJSRuntime JSRuntime // Injecting JavaScript runtime for interop calls


<div @onclick="() => Parent.OpenModal()">
    @ChildContent
</div>

@code {

    [CascadingParameter(Name = "Id")]
    public string? Id { get; set; } // Unique identifier for the modal, used for accessibility and JavaScript interactions

    [CascadingParameter(Name = "Parent")]
    public Dialog? Parent { get; set; } // Reference to the parent dialog component

    [Parameter]
    public RenderFragment? ChildContent { get; set; } // Content to be displayed inside the modal

}
